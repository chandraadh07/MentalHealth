<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_corners"
    tools:context=".WelcomeFragment">


    <TextView
        android:id="@+id/txtWelcometext"
        android:layout_width="match_parent"
        android:layout_height="363dp"
        android:fontFamily="sans-serif-black"
        android:text="Welcome to Our App!\nAre You Excited to Watch Your Personalized Videos? "
        android:textColor="@color/colorText"
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toTopOf="@+id/btnToProceed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnToProceed"
        android:layout_width="300dp"
        android:layout_height="73dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/roundbutons"
        android:text="Click Here to Proceed"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>